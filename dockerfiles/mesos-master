FROM mesosphere/mesos:VERSION
MAINTAINER Mesosphere <support@mesosphere.io>

RUN apt-get install -y runit

RUN mkdir -p /etc/service
COPY runit/mesos-master /etc/service/mesos-master
COPY runit/mesos-master-slave /etc/service/mesos-slave
COPY runit/zk /etc/service/zk
COPY runit/init.sh /init.sh

COPY etc/zk/conf /etc/zookeeper/conf

ENTRYPOINT ["/init.sh"]
